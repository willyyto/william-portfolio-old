---
import { IHeroProps } from "@types";

const { name, about } = Astro.props as IHeroProps;
---
<section>
  <div class="px-6 py-2 md:px-12 bg-background-color-50 text-background-color-800 text-center lg:text-left">
    <div class="container mx-auto">
      <div class="grid py-4 lg:grid-cols-2 lg:space-x-40 flex items-center">
        <div class="lg:mt-0">
          <h2 class="dark:text-light lg:mt-[117px] text-5xl">Hey, Iâ€™m</h2>
          <h1>{name}</h1>
        </div>
        <div class="mb-12 lg:mb-0 sm:mx-auto md:mx-auto items-center">
          <img
          src="/assets/images/portfolio-picture.png"
            class="w-300 h-300 rounded-full shadow-lg"
            alt=""
          />
        </div>
      </div>
      {about.map((item) => (
        <p class="dark:text-light text-lg mb-5">{item}</p>
      ))}

      <button class="my-4 rounded-full button-custom w-button" style="background:">Download CV</button>

      
    </div>
    
  </div>
  
</section>

<style>
  .button-custom {
  padding: 10px 40px;
  border-radius: 100px;
  background-color: #8356ff;
  background-image: -webkit-gradient(linear, left top, right top, from(#9969ff), to(#6139ff));
  background-image: linear-gradient(90deg, #9969ff, #6139ff);
  -webkit-transition: all 200ms ease;
  transition: all 200ms ease;
  font-family: Colfax, sans-serif;
  font-size: 19px;
  line-height: 100%;
  font-weight: 600;
  text-align: center;
}

.w-button {
  display: inline-block;
  background-color: #3898EC;
  color: white;
  border: 0;
  line-height: inherit;
  text-decoration: none;
  cursor: pointer;
}

  input.w-button {
    -webkit-appearance: button;
  }
</style>
